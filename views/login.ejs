<!DOCTYPE html>
<html lang="en">

<%- include('partials/head') %>

    <body>

        <%- include('partials/nav2') %>

            <section class="hero is-halfheight">
                <div class="hero-body">
                    <div class="container has-text-centered">
                        <div class="column is-6 is-offset-3">
                            <div class="box">
                                <h4 class="title is-4">Login</h4>
                                <p class="subtitle is-6">Enter your email and password.</p>
                                <form>
                                    <div class="field">
                                        <label for="" class="label has-text-left">Email</label>
                                        <p class="control has-icons-left has-icons-right">
                                            <input class="input is-focused" type="email" placeholder="Enter Email" />
                                            <span class="icon is-left">
                                                <i class="fas fa-envelope"></i>
                                            </span>
                                            <span class="icon is-right">
                                                <i class="fas fa-check"></i>
                                            </span>
                                        </p>
                                    </div>
                                    <div class="field">
                                        <label for="" class="label has-text-left">Password</label>
                                        <p class="control has-icons-left">
                                            <input class="input" type="password" placeholder="Enter Password" />
                                            <span class="icon is-left">
                                                <i class="fas fa-lock"></i>
                                            </span>
                                        </p>
                                    </div>
                                    <button class="button is-block is-link is-fullwidth">Login</button>
                                    <br>
                                    <p> <a href="/forgot_password">Forgot password?</a> </p>
                                    <p>
                                        Don't have an account yet? <a href="/register">Register here</a>
                                    </p>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <script src="../scripts/script.js"></script>
    </body>

</html>